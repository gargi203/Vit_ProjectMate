<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile - VIT ProjectMate</title>
    <link rel="stylesheet" href="/public/assets/profile.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

    <!-- Modern Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/" class="nav-brand"><i class="fas fa-code"></i> VIT ProjectMate</a>
            </div>
            <div class="nav-menu" id="nav-menu">
                <a class="nav-link" href="/projects"><i class="fas fa-search"></i> Explore</a>
                <a class="nav-link" href="/about"><i class="fas fa-info-circle"></i> About</a>
                <a class="nav-link" href="/contact"><i class="fas fa-envelope"></i> Contact</a>
                <a class="nav-link" href="/gallery"><i class="fas fa-images"></i> Gallery</a>
                <%  if(!user){%>
                <a class="nav-link nav-cta" href="/register"><i class="fas fa-user-plus"></i> Register</a>
                <a class="nav-link nav-cta-primary" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
                <%  }else{ %>
                <a class="nav-link nav-cta" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                <a href="/userprofile" class="nav-profile"><img src="/<%= user.img.path %>" alt="" class="profile-img"></a>
                <%  } %>
            </div>
            <div class="nav-toggle" id="nav-toggle">
                <span class="bar"></span><span class="bar"></span><span class="bar"></span>
            </div>
        </div>
    </nav>

    <!-- Profile Hero -->
    <section class="profile-hero">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title"><span class="gradient-text">User Profile</span></h1>
                <p class="hero-subtitle">Your public profile and links</p>
            </div>
        </div>
    </section>

    <!-- Profile Header Card -->
    <section class="profile-section">
        <div class="container">
            <div class="profile-header">
                <div class="avatar">
                    <img src="/<%= puser.img.path %>" alt="Profile picture">
                </div>
                <div class="info">
                    <h2 class="name"><%= puser.email %></h2>
                    <p class="about"><%= puser.about %></p>
                    <div class="meta">
                        <span><i class="fas fa-envelope"></i> <%= puser.username %></span>
                        <span><i class="fas fa-school"></i> <%= puser.institute %></span>
                        <span><i class="fas fa-code"></i> <%= puser.language %></span>
                    </div>
                    <div class="links">
                        <% if (puser.github) { %>
                        <a href="<%= puser.github %>" target="_blank" class="link-btn"><i class="fab fa-github"></i> GitHub</a>
                        <% } %>
                        <% if (puser.linkedIn) { %>
                        <a href="<%= puser.linkedIn %>" target="_blank" class="link-btn"><i class="fab fa-linkedin"></i> LinkedIn</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Details Grid -->
    <section class="details-section">
        <div class="container">
            <div class="details-grid">
                <div class="detail-card">
                    <h3><i class="fas fa-id-card"></i> About</h3>
                    <p><%= puser.about %></p>
                </div>
                <div class="detail-card">
                    <h3><i class="fas fa-school"></i> Institute</h3>
                    <p><%= puser.institute %></p>
                </div>
                <div class="detail-card">
                    <h3><i class="fas fa-code"></i> Favourite Language</h3>
                    <p><%= puser.language %></p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <h3><i class="fas fa-code"></i> VIT ProjectMate</h3>
                    <p>Development Leads To Invention</p>
                </div>
                <div class="footer-links">
                    <div class="footer-column">
                        <h4>Platform</h4>
                        <a href="/projects">Explore Projects</a>
                        <a href="/about">About Us</a>
                        <a href="/contact">Contact</a>
                    </div>
                    <div class="footer-column">
                        <h4>Community</h4>
                        <a href="/gallery">Gallery</a>
                        <a href="/register">Join Us</a>
                        <a href="/login">Login</a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>Copyright Â© 2025 Aarushi Chaddha</p>
            </div>
        </div>
    </footer>

    <script>
        const navToggle = document.getElementById('nav-toggle');
        const navMenu = document.getElementById('nav-menu');
        navToggle && navToggle.addEventListener('click', () => {
            navMenu.classList.toggle('active');
            navToggle.classList.toggle('active');
        });
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', () => {
                navMenu.classList.remove('active');
                navToggle.classList.remove('active');
            });
        });
    </script>
</body>
</html>