<!DOCTYPE html>
<html lang="en" style="overflow-x: hidden;">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Projects - VIT ProjectMate</title>
    <link rel="stylesheet" href="/public/assets/project.css">
    <link rel="stylesheet" href="/public/assets/editproject.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

    <!-- Modern Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/" class="nav-brand"><i class="fas fa-code"></i> VIT ProjectMate</a>
            </div>
            <div class="nav-menu" id="nav-menu">
                <a class="nav-link" href="/projects"><i class="fas fa-search"></i> Explore</a>
                <a class="nav-link" href="/about"><i class="fas fa-info-circle"></i> About</a>
                <a class="nav-link" href="/contact"><i class="fas fa-envelope"></i> Contact</a>
                <a class="nav-link" href="/gallery"><i class="fas fa-images"></i> Gallery</a>
                <%  if(!user){%>
                <a class="nav-link nav-cta" href="/register"><i class="fas fa-user-plus"></i> Register</a>
                <a class="nav-link nav-cta-primary" href="/login"><i class="fas fa-sign-in-alt"></i> Login</a>
                <%  }else{ %>
                <a class="nav-link nav-cta" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                <a href="/userprofile" class="nav-profile"><img src="/<%= user.img.path %>" alt="" class="profile-img"></a>
                <%  } %>
            </div>
            <div class="nav-toggle" id="nav-toggle">
                <span class="bar"></span><span class="bar"></span><span class="bar"></span>
            </div>
        </div>
    </nav>

    <!-- Hero -->
    <section class="projects-hero">
        <div class="container">
            <div class="hero-inner">
                <div class="hero-text">
                    <h1 class="hero-title"><span class="gradient-text">Your Projects</span></h1>
                    <p class="hero-subtitle">Edit or delete your projects</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Owner project list -->
    <section class="projects">
        <div class="container">
            <div class="projects-grid">
                <% userprojects.projects.forEach(function(project){ %>
                <article class="project-card">
                    <div class="project-card-header">
                        <div class="project-badge"><i class="fas fa-hashtag"></i><span><%= project.id %></span></div>
                    </div>
                    <h2 class="project-title"><%= project.title %></h2>
                    <div class="project-footer" style="justify-content:flex-end;gap:.5rem">
                        <a class="btn btn-secondary" href="/projects/editproject/<%=project.id%>"><i class="fas fa-pen"></i> Edit</a>
                        <form action="/projects/editproject/delete/<%=project.id%>?_method=DELETE" method="POST" style="display:inline">
                            <button class="btn btn-primary" type="submit"><i class="fas fa-trash"></i> Delete</button>
                        </form>
                    </div>
                </article>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <h3><i class="fas fa-code"></i> VIT ProjectMate</h3>
                    <p>Development Leads To Invention</p>
                </div>
                <div class="footer-links">
                    <div class="footer-column">
                        <h4>Platform</h4>
                        <a href="/projects">Explore Projects</a>
                        <a href="/about">About Us</a>
                        <a href="/contact">Contact</a>
                    </div>
                    <div class="footer-column">
                        <h4>Community</h4>
                        <a href="/gallery">Gallery</a>
                        <a href="/register">Join Us</a>
                        <a href="/login">Login</a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>Copyright Â© 2025 Aarushi Chaddha</p>
            </div>
        </div>
    </footer>

    <script>
        const navToggle = document.getElementById('nav-toggle');
        const navMenu = document.getElementById('nav-menu');
        navToggle && navToggle.addEventListener('click', () => {
            navMenu.classList.toggle('active');
            navToggle.classList.toggle('active');
        });
    </script>
</body>
</html>